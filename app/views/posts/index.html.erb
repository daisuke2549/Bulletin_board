
<div class ="post_list">
<div class="post_list_title">投稿一覧</div>
  <% @posts.each do |post|%>
      <div class ="post_list_card">
        <div class="card_title">
          <%= post.name %>
          <p1>投稿日</p1>
          <p2>投稿時間</p2>
        </div>
        <div class="card_title_info">
          <%= post.content %>
        </div>
        <div class="image_post_icon">
        </div>
        <div class="post_edit_ button "><%= link_to '編集', edit_post_path(post.id) %>
        </div>
        <div class="post_delete_button "><%= link_to "削除", "posts/#{post.id}", data: { method: 'delete', confirm: '本当に削除してもよろしいですか？' } %>
      </div>
      <div class="post_newimage_button "><%= link_to '画像投稿', edit_post_path(post.id) %>
      </div>
    </div>
    <% end %>
  </div>
  </div> 
  </div>
</div>